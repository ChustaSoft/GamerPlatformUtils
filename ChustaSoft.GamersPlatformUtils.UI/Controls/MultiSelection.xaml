<UserControl x:Class="ChustaSoft.GamersPlatformUtils.UI.Controls.MultiSelection" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:main="clr-namespace:ChustaSoft.GamersPlatformUtils.UI" 
             x:Name="multiSelection"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <main:NullVisibilityConverter x:Key="nullVisibleConverter" />
    </UserControl.Resources>
    <Grid>
        <ComboBox x:Name="comboBox" Width="200" ToolTip="Open for selecting multiple elements"
                  ItemsSource="{Binding ElementName=multiSelection, Path=Items}" 
                  SelectedItem="{Binding ElementName=multiSelection, Path=ItemSelected}"
                  >
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <CheckBox IsChecked="{Binding Path=Selected, Mode=TwoWay}" Margin="0 0 5 0"/>
                        <TextBlock Text="{Binding Path=Name, Mode=OneWay}" />
                    </StackPanel>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <Label HorizontalAlignment="Left" VerticalAlignment="Center"
               Margin="0,2,20,2" IsHitTestVisible="False"
               Content="{Binding ElementName=multiSelection, Path=DefaultText}"
               Visibility="{Binding ElementName=multiSelection, Path=ItemSelected, Converter={StaticResource nullVisibleConverter}}"/>
    </Grid>
</UserControl>
